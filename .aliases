alias sublime='subl'
alias ls='ls -Fh'
alias c='clear'
alias h='history'
alias j='jobs'
alias rm='rm -i'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias -- -='cd -'
alias sl='ls'
alias docs='cd ~/Documents'
alias dev='cd ~/Development'
alias dl='cd ~/Downloads'
alias clean='rm -f *~ .*~ *.class'
alias other='mv /Volumes/CODY1T/Movies/.Other /Volumes/CODY1T/Movies/Other'
alias .other='mv /Volumes/CODY1T/Movies/Other /Volumes/CODY1T/Movies/.Other'
alias vim='mvim -v'
